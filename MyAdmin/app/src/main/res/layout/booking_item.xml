<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="355dp"
        android:layout_margin="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Layout inside CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TextView inside CardView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="8dp"
                android:text="Booking Details"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <!-- Horizontal LinearLayout for TextViews in one row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Movie Text -->
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Movie :"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="MovieTitle"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Movie Text -->
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Mobile :"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/mobilenumber"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:text="0771648023"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Movie Text -->
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Email :"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/email"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:text="shashi@gmail.com"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Movie Text -->
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Slot :"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/slot"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:text="10.30 a.m. "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/theater"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Matara"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Movie Text -->
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Date :"
                    android:textAlignment="textEnd"
                    android:textSize="16sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/date"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:text="10/02/2025"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Movie Text -->
                <TextView
                    android:id="@+id/rs"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Rs."
                    android:textAlignment="textEnd"
                    android:textColor="#DC1010"
                    android:textSize="24sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="2000"
                    android:textAlignment="textStart"
                    android:textColor="#DC1010"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/nooftickets"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:text="02"
                    android:textAlignment="textEnd"
                    android:textColor="@color/greeen"
                    android:textSize="24sp" />

                <!-- Movie value -->
                <TextView
                    android:id="@+id/tickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tickets"
                    android:textAlignment="textEnd"
                    android:textColor="@color/greeen"
                    android:textSize="24sp" />

            </LinearLayout>

            <Button
                android:id="@+id/bookingStatus"
                android:layout_width="270dp"
                android:layout_height="wrap_content"

                android:backgroundTint="@color/black"
                android:text="Pending"
                android:textColor="@color/white"
                android:textColorLink="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
